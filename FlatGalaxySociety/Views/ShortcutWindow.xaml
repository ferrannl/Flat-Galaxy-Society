<Window x:Class="FlatGalaxySociety.Views.ShortcutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlatGalaxySociety.Views"
        mc:Ignorable="d"
        Title="ShortcutWindow" Width="300" Height="235" WindowStartupLocation="CenterScreen">
    <StackPanel >
        <StackPanel>
            <TextBlock>Sneltoetsen moeten uit één letter bestaan.</TextBlock>
        </StackPanel>
        <StackPanel >
            <DataGrid CanUserAddRows="False" Grid.Row="1" HeadersVisibility="Column" SelectionMode="Single" AutoGenerateColumns="False" ItemsSource="{Binding ShortcutList}" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="2*" Header="Actie" Binding="{Binding Name}" IsReadOnly="True"  />
                    <DataGridTextColumn Width="*" Header="Sneltoets" Binding="{Binding KeyChar}" IsReadOnly="False" />                    
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel>
            <Button Command="{Binding SaveCommand}" Content="Opslaan"/>
        </StackPanel>
    </StackPanel>
</Window>
